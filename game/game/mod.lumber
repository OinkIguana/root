:- use(@core::list(in/2)).

:- mod(gameMap).
:- mod(tokens).
:- mod(warriors).

:- pub(gameOwner/2).
gameOwner(game { players: [player { name: Name, .. }, ..], .. }, Name).

:- pub(phase/2).
phase(game { phase: phase(Phase), .. }, Phase).

:- pub(playerFaction/3).
playerFaction(game { factions: Factions, .. }, Name, Faction) :-
    in(faction { faction: Faction, player: Name, .. }, Factions).
