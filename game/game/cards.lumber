:- use(@core).
:- use(@core::list).

:- pub(drawCard/3).
drawCard(
    game { shared_deck: [shared_deck { card: Drawn, .. }, ..Deck], ..State },
    Drawn,
    game { shared_deck: Deck, ..State },
).

:- pub(card/4).
card(G, Id, Kind, Suit) :-
    G =:= game { cards: Cards, .. },
    in(card { id: Id, card: card(Kind), suit: suit(Suit), .. }, Cards).
